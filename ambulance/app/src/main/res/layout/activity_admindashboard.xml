<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admindashboard">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck">


        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="1"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="15dp"
                android:layout_margin="24dp"
                android:id="@+id/register"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/emergency"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Register Account"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/greycliffcfbold"
                        android:background="@color/grey"

/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="15dp"
                android:layout_margin="24dp"
                android:id="@+id/view"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/detials"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Account"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/greycliffcfbold"
                        android:background="@color/grey"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="15dp"
                android:layout_margin="24dp"
                android:id="@+id/edit"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/reporting"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Account"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/greycliffcfbold"
                        android:background="@color/grey"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="15dp"
                android:layout_margin="24dp"
                android:id="@+id/delete"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/credentials"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete Account"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/greycliffcfbold"
                        android:background="@color/grey"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="15dp"
                android:layout_margin="24dp"
                android:id="@+id/getmap"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/ambulance"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAP"
                        android:textAlignment="center"
                        android:textSize="35dp"
                        android:textColor="@color/red"
                        android:fontFamily="@font/greycliffcfbold"
                        android:background="@color/grey"

                        />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>